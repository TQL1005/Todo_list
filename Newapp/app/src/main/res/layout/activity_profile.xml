<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/detail_profile"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:backgroundTint="#60A3D9"
        android:background="@drawable/search__view_bg"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:textSize="15sp"
            android:text="@string/ha_van_long" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:background="@drawable/search__view_bg"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/detail_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#7EC8E3"
            android:text="@string/change_password" />

        <Button
            android:id="@+id/my_booking"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#7EC8E3"
            android:text="My Booking" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#7EC8E3"
            android:text="Customer Support"
            android:id="@+id/customer_support" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#7EC8E3"
            android:text="Follow Us"
            android:id="@+id/follow_us"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#7EC8E3"
            android:text="@string/terms_amp_conditions"
            android:id="@+id/terms_amp_conditions"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#7EC8E3"
            android:text="Logout"
            android:id="@+id/Logout"
            />

    </LinearLayout>


</RelativeLayout>